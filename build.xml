<?xml version="1.0" encoding="UTF-8"?>
<project name="Cached List" default="dist">
	<property name="ultimateCMSRepoRequirements" location="../de.plugins-zum-selberbauen.ultimate/de.plugins-zum-selberbauen.ultimate/requirements" />
	<target name="clean" description="Deletes old tar files.">
		<delete>
			<fileset dir="metadata" includes="**/*.tar"/>
		</delete>
		<delete>
			<fileset dir="build" includes="**/*.tar*" />
		</delete>
		<delete>
			<fileset dir="${ultimateCMSRepoRequirements}" includes="**/*cachedList.tar*" />
		</delete>
	</target>

	<target name="pack" depends="clean" description="Packs the tar files.">
		<tar destfile="metadata/files.tar">
			<tarfileset dir="src">
				<exclude name="templates/**" />
				<exclude name="acp/templates/**" />
			</tarfileset>
		</tar>
	</target>

	<target name="dist" depends="pack" description="Generates the package archive.">
		<tar destfile="$build/de.plugins-zum-selberbauen.cachedList.tar" 
			 basedir="metadata"
		/>
		<gzip src="build/de.plugins-zum-selberbauen.cachedList.tar"
			  destfile="build/de.plugins-zum-selberbauen.cachedList.tar.gz"
		/>
		<copy file="build/de.plugins-zum-selberbauen.cachedList.tar.gz"
			todir="${ultimateCMSRepoRequirements}"
		/>
	</target>
</project>